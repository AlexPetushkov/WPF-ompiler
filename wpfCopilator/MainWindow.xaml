<Window x:Class="wpfCopilator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfCopilator"
        mc:Ignorable="d"
        Title="Компилятор" Height="450" Width="800" Background="#F2F2F2"
        MinWidth="440" MinHeight="250" Closed="Window_Closed" Closing="Window_Closing">
    
    <Window.CommandBindings>
        <CommandBinding Command="New" 
                        Executed="CommandNew_Executed"
                        CanExecute="CommandNew_CanExecute">
        </CommandBinding>
        <CommandBinding Command="Open" 
                        Executed="CommandOpen_Executed"
                        CanExecute="CommandNew_CanExecute">
        </CommandBinding>
        <CommandBinding Command="SaveAs" 
                        Executed="CommandSaveAs_Executed"
                        CanExecute="CommandNew_CanExecute">
        </CommandBinding>
        <CommandBinding Command="Save" 
                        Executed="CommandSave_Executed"
                        CanExecute="CommandNew_CanExecute">
        </CommandBinding>
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="16"/>
        </Grid.ColumnDefinitions>
        

        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать" Command="New"/>
                <MenuItem Header="Открыть" Command="Open" />
                <MenuItem Header="Сохранить" Command="Save"/>
                <MenuItem Header="Сохранить как" Command="SaveAs" />
                <MenuItem Name ="MenuItemExit" Header="Выход" Click="MenuItemExit_Click"/>
            </MenuItem>


            <MenuItem Header="Правка">
                <MenuItem Header="Отменить"/>
                <MenuItem Header="Повторить"/>
                <MenuItem Header="Вырезать" Command="Cut"/>
                <MenuItem Header="Копировать" Command="Copy"/>
                <MenuItem Header="Вставить" Command="Paste"/>
                <MenuItem Header="Удалить" Command="Delete"/>
                <MenuItem Header="Выделить все" Command="SelectAll"/>
            </MenuItem>

            <MenuItem Header="Текст">
                <MenuItem Header="Постановка задачи"/>
                <MenuItem Header="Грамматика"/>
                <MenuItem Header="Постановка грамматики"/>
                <MenuItem Header="Метод анализа"/>
                <MenuItem Header="Диагностика и нейтрализация ошибок"/>
                <MenuItem Header="Тестовый пример"/>
                <MenuItem Header="Список литературы"/>
                <MenuItem Header="Исходный код программы"/>
            </MenuItem>

            <MenuItem Header="Пуск"/>

            <MenuItem Header="Справка">
                <MenuItem Header="Вызов справки"/>
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        
        
        <!--Панель инструментов -->
        <ToolBar Grid.ColumnSpan="5" Margin="0,22,0,0">
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопки меню "Файл"-->
            <Button x:Name="button_Create" Grid.Column="0" Command="New" Style="{DynamicResource ButtonPanelTool}">
                
                <Button.ToolTip>
                    <ToolTip>Создать (Ctrl+N)</ToolTip>
                </Button.ToolTip>
                <Image Source="Assets/Create.png"/>
            </Button>
                <Button x:Name="button_Open" Command="Open" Grid.Column="1" Style="{DynamicResource ButtonPanelTool}">
                
                <Button.ToolTip>
                    <ToolTip>Открыть (Ctrl+O)</ToolTip>
                </Button.ToolTip>
                <Image Source="Assets/Open.png" Width="38" Height="30"/>
            </Button>
                <Button x:Name="button_Save" Command="Save" Grid.Column="2" Style="{DynamicResource ButtonPanelTool}">
                
                <Button.ToolTip>
                    <ToolTip>Сохранить (Ctrl+S)</ToolTip>
                </Button.ToolTip>
                <Image Source="Assets/Save.png" Width="38" Height="30"/>
            </Button>

            <!-- Кнопки меню "Правка"-->
            <Button x:Name="button_Cancel" Grid.Column="4" Style="{DynamicResource ButtonPanelTool}">
                                
                <Button.ToolTip>
                    <ToolTip>Отменить (Ctrl+Z)</ToolTip>                    
                </Button.ToolTip>

                <Image Source="Assets/Cancel.png" Height="30"/>
            </Button>
            <Button x:Name="button_Return" Grid.Column="5" Style="{DynamicResource ButtonPanelTool}">
                
                <Button.ToolTip>
                    <ToolTip>Вернуть (Ctrl+Y)</ToolTip>
                </Button.ToolTip>
                
                <Image Source="Assets/Return.png" Height="30"/>
            </Button>
            <Button x:Name="button_Copy" Command="Copy" Grid.Column="6" Style="{DynamicResource ButtonPanelTool}">
                
                <Button.ToolTip>
                    <ToolTip>Копировать (Ctrl+C)</ToolTip>
                </Button.ToolTip>
                
                <Image Source="Assets/Copy.png" Height="30"/>
            </Button>
                <Button x:Name="button_Paste" Command="Paste" Grid.Column="7" Style="{DynamicResource ButtonPanelTool}">
                
                <Button.ToolTip>
                    <ToolTip>Вставить (Ctrl+V)</ToolTip>
                </Button.ToolTip>

                <Image Source="Assets/Paste.png" Height="30"/>
            </Button>
            <Button x:Name="button_Cut" Command="Cut" Grid.Column="8" Style="{DynamicResource ButtonPanelTool}">
                
                <Button.ToolTip>
                    <ToolTip >Вырезать (Ctrl+X)</ToolTip>
                </Button.ToolTip>

                <Image Source="Assets/Cut.png" Height="30"/>
            </Button>

            <!--Остальное -->
            <Button x:Name="button_Play" Grid.Column="9" Style="{DynamicResource ButtonPanelTool}">                
                
                <Button.ToolTip>
                    <ToolTip>Запуск</ToolTip>
                </Button.ToolTip>

                <Image Source="Assets/Play.png" Height="30"/>
            </Button>
            <Button x:Name="button_Help" Grid.Column="10" Style="{DynamicResource ButtonPanelTool}">

                <Button.ToolTip>
                    <ToolTip>Запуск</ToolTip>
                </Button.ToolTip>

                <Image Source="Assets/Help.png" Height="30"/>
            </Button>
            <Button x:Name="button_Info" Grid.Column="11" Style="{DynamicResource ButtonPanelTool}">

                <Button.ToolTip>
                    <ToolTip>Запуск</ToolTip>
                </Button.ToolTip>

                <Image Source="Assets/Info.png" Height="30"/>
            </Button>
        </Grid>
        </ToolBar>

        <TabControl x:Name="mainTabControl" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4">
            <TabItem Header="TabItem">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
        <TabControl Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4">
            <TabItem Header="TabItem">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>

        
        <GridSplitter Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  Height="5"/>
    </Grid>
</Window>
